# Backend Environment Variables Example
# Copy this file to .env and fill in your values
# NEVER commit real secrets - use deployment provider secrets instead

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_REDIRECT_URI=https://your-backend-domain.com/api/v1/linkedin/callback

# Database Configuration
# Choose database type: "sqlite" for development, "cloudsql" for Google Cloud SQL
DATABASE_TYPE=cloudsql

# SQLite (Development only - not recommended for production)
DATABASE_URL=sqlite:///database.db

# Google Cloud SQL (Production)
INSTANCE_CONNECTION_NAME=your-project:your-region:your-instance
DB_USER=your_database_user
DB_PASS=your_database_password
DB_NAME=your_database_name

# Google Cloud AI
GOOGLE_CLOUD_PROJECT=your_project_id
# For production: Use GOOGLE_APPLICATION_CREDENTIALS_JSON env var with JSON string
# For local dev: Set GOOGLE_APPLICATION_CREDENTIALS to path of JSON key file
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Frontend
FRONTEND_URL=https://your-frontend-domain.com

# CORS (comma-separated URLs for production)
BACKEND_CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# App Settings
DEBUG=false
ALLOWED_HOSTS=your-frontend-domain.com,your-backend-domain.com